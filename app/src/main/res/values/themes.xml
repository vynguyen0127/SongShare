<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SongShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorPrimaryVariant">@color/teal_dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/peach_light</item>
        <item name="colorSecondaryVariant">@color/salmon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme2.SongShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orchid_pink</item>
        <item name="colorPrimaryVariant">@color/nadeshiko_pink</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_lavender</item>
        <item name="colorSecondaryVariant">@color/pink_lavender2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>